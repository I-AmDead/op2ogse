; Молния в БУМе

[logic]
active = walker
combat_ignore = combat_ignore

[walker]
path_walk = molniy_walk
path_look = molniy_look
meet = meet
on_info = {+portal_lima_idu} walker1 %=arhara_dialog.sp_imit_tele_molniy%
combat_ignore_cond = {=fighting_dist_ge(15)} always

[walker1]
path_walk = molniy1_walk
path_look = molniy1_look
meet = no_meet
combat_ignore_cond = always
on_signal = endpoint | nil %=arhara_dialog.dell_molniy%

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

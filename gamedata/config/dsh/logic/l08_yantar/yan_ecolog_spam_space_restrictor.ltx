; Этот рестриктор прячет участников сцены на ДТ

[logic]
active = sr_idle

[sr_idle]
on_info = {+yan_scientist_die -yan_scientist_return_to_bunker} sr_idle@1
on_info2 = {+yan_scientist_die +yan_scientist_return_to_bunker} sr_idle@2
on_info3 = {+global_dialogs -bar_heli_scene_professor_die -bar_rescue_research_done} %+bar_heli_scene_professor_die +bar_rescue_research_fail =dsh.clean_bar_ecolog_professor%

[sr_idle@1]
on_timer = 4000 |{+yan_kill_brain_task_start} nil ,{-yan_kill_brain_task_start}  sr_idle@wait %=yantar_professor_spam_1%

[sr_idle@2]
on_timer = 4000 |{+yan_kill_brain_task_start} nil ,{-yan_kill_brain_task_start} nil %=yantar_professor_spam_2%

[sr_idle@wait]
on_timer = 4000 | nil %+yan_scientist_return_task% 

;
; Пересечение железки и обижание Кузнецова

[logic]
active = sr_idle

[sr_idle]
on_actor_inside = {-esc_bridge_pass_on} sr_idle@enemy %+esc_bridge_pass_fire%
on_info = {+esc_bridge_pass_on} sr_idle@pass

[sr_idle@pass]
on_game_timer = 3600| sr_idle %+esc_bridge_pass_off%

[sr_idle@enemy]
on_info = {-esc_bridge_pass_fire} sr_idle

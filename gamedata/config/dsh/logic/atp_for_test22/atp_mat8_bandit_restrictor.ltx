; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = sr_idle

[sr_idle]
on_actor_inside = {+atp_banda_disk_spawn} sr_idle@shooting, {+arh_disk_start } sr_idle2

[sr_idle2]
on_info = {+atp_banda_disk_spawn} sr_idle@shooting
on_actor_outside = {-atp_banda_disk_spawn} sr_idle3

[sr_idle3]
on_info = {+atp_banda_disk_spawn} nil %=release%
on_actor_inside = {-atp_banda_disk_spawn} sr_idle2

[sr_idle@shooting]
on_timer = 6100| sr_sound@shooting

[sr_sound@shooting]
snd = characters_voice\scenario\arhara_atp\band8
play_at_actor = true
on_signal = sound_end | nil %=release%
on_timer = 20000 | nil %=release%

; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Дверь, которая открывается кодом от Сяка

[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
on_info = {+rad_code_door_unlocked} ph_door@open
snd_open_start = trader_door_locked

[ph_door@close]
locked = false
closed = true
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_info = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_init = trader_door_unlock
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
show_tips = false

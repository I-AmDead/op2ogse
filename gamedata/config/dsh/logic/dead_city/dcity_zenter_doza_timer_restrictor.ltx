;
; защитная зона в МГ

[logic]
active = sr_idle
 
[sr_idle]
on_actor_inside = sr_idle@time %=arhara_dialog.sms_dcity_zenter_doza%

[sr_idle@2]
on_actor_outside = sr_idle
on_info = {=dsh.npc_inside_zone} sr_idle@time %=arhara_dialog.sms_dcity_zenter_doza%

[sr_idle@time]
on_actor_outside = sr_idle
on_timer = 3000 | nil %=aes_kill_actor%

[sr_idle@nil]
on_info = nil

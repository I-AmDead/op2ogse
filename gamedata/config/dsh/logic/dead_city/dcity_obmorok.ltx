; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Стрелка с Обмороком в МГ

[logic]
active = walker
meet = meet
combat_ignore = combat_ignore@bandit
on_hit = hit
on_death = death

[walker]
path_walk = dcity_obmorok_walk
path_look = dcity_obmorok_look
combat_ignore_cond = {-dcity_obmorok_enemy =fighting_actor}, {=dist_to_enemy_ge(10)}
on_info = {+obmorok_say_one_start} walker1

[walker1]
path_walk = dcity1_obmorok1_walk
path_look = dcity1_obmorok1_look
;on_timer = 300000 | kamp
combat_ignore_cond = {-dcity_obmorok_enemy =fighting_actor}, {=dist_to_enemy_ge(10)}

[kamp]
center_point  = dead_city_banda_bandit_camp_center
path_walk = dead_city_banda_bandit_camp_center_task
radius = 2.4
on_timer = 200000 | kamp1
combat_ignore_cond = {-dcity_obmorok_enemy =fighting_actor}, {=dist_to_enemy_ge(10)}

[kamp1]
center_point  = dead_city_banda_bandit1_camp_center
path_walk = dead_city_banda_bandit1_camp_center_task
radius = 2.4
on_timer = 150000 | walker1
combat_ignore_cond = {-dcity_obmorok_enemy =fighting_actor}, {=dist_to_enemy_ge(10)}

[meet]
use = true
use_wpn = true
meet_talk_enabled = true
victim = 10 | actor

[hit]
on_info = {=hit_by_actor} %+dcity_obmorok_enemy%

[death]
on_info = {=killed_by_actor} %+dcity_obmorok_enemy%

[combat_ignore@bandit]
combat_ignore_cond = {-dcity_obmorok_enemy =fighting_actor}, {=dist_to_enemy_ge(10)}

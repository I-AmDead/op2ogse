;
; расстрельщики в МГ

[logic]
active = walker
on_hit = hit
on_death = death
combat_ignore = combat_ignore

[walker]
path_walk = dcity_last_rasstrel2_walk
path_look = dcity_last_rasstrel2_look
on_info = {+podnyat_oruzhie} walker1
combat_ignore_cond = {-nach_oxran_enemy -uhod_iz_mg_done =fighting_dist_ge(10)}

[walker1]
path_walk = dcity_last_rasstrel2_walk
path_look = dcity_last_rasstrel2_look
def_state_standing = assault
def_state_moving = assault
on_info = {+dsity_rasstrel2_umer} walker2
combat_ignore_cond = {-nach_oxran_enemy -uhod_iz_mg_done =fighting_dist_ge(10)}

[walker2]
path_walk = dcity_last_rasstrel2_walk
path_look = dcity_last_rasstrel2_look
on_timer = 500 | walker3
combat_ignore_cond = {-nach_oxran_enemy -uhod_iz_mg_done =fighting_dist_ge(10)}

[walker3]
path_walk = dcity_last2_rasstrel2_walk
path_look = dcity_last2_rasstrel2_look
combat_ignore_cond = {-nach_oxran_enemy -uhod_iz_mg_done =fighting_dist_ge(10)}

[hit]
on_info = {=hit_by_actor} %+nach_oxran_enemy%

[death]
on_info = {=killed_by_actor} %+nach_oxran_enemy%

on_timer = 3000 | sr_idle@time6 %=braad_test.dead_city_atpeshka =arhara_dialog.sms_zlobnomu_rasstrel4_1%

[sr_idle@time6]
on_timer = 15000 | sr_idle@time7 %=arhara_dialog.sms_zlobnomu_rasstrel5%

[sr_idle@time7]
on_timer = 7000 | sr_idle@time8 %=arhara_dialog.sms_zlobnomu_rasstrel6%

[sr_idle@time8]
on_timer = 300000 | {-agro_tainik_norman_start} nil %=arhara_dialog.sms_zlobnomu_rasstrel7 =arhara_dialog.del_perexodik%, nil %=arhara_dialog.del_perexodik%


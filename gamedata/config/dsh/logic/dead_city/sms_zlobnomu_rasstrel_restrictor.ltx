on_timer = 35000 | sr_idle@time1 %=arhara_dialog.sms_zlobnomu_rasstrel%

[sr_idle@time1]
on_timer = 10000 | sr_idle@time2 %=arhara_dialog.sms_zlobnomu_rasstrel1%

[sr_idle@time2]
on_timer = 15000 | sr_idle@time3 %=arhara_dialog.sms_zlobnomu_rasstrel2%

[sr_idle@time3]
on_timer = 12000 | sr_idle@time4 %=arhara_dialog.sms_zlobnomu_rasstrel3%

[sr_idle@time4]
on_timer = 12000 | sr_idle@time5 %=arhara_dialog.sms_zlobnomu_rasstrel4%


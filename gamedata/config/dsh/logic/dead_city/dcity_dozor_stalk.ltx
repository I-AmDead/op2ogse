[walker]
path_walk = dcity_dozor_stalk_walk
path_look = dcity_dozor_stalk_look
on_info = {+stalki_go_go} walker1
meet = meet
combat_ignore_cond = {=dist_to_enemy_ge(20)}

[walker1]
path_walk = dcity1_dozor1_stalk1_walk
path_look = dcity1_dozor1_stalk1_look

; Батя на Юпитере

[logic]
active = walker
on_death = death
on_hit = hit
combat_ignore = combat_ignore

[walker]
path_walk = upiter_baty_walk
path_look = upiter_baty_look
combat_ignore_cond = {=fighting_actor} always, {=fighting_dist_ge(20)} always
meet = meet
on_info = {+kuzmat_lek_done} walker1

[walker1]
path_walk = upiter1_baty1_walk
path_look = upiter1_baty1_look
meet = no_meet
combat_ignore_cond = {=fighting_actor} always, {=fighting_dist_ge(20)} always
on_signal = endpoint | %+upi_baty_otlet_heli =buusty_dialog.delete_upiter_baty%

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

[death]
on_info = {=killed_by_actor} %+upiter_baty_proval%

[hit]
on_info = {=hit_by_actor} %+upiter_baty_proval%

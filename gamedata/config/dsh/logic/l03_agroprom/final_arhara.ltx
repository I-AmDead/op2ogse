; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Архара после сходки авторитетов

[logic]
active = walker
combat_ignore = combat_ignore

[walker]
path_walk = final_arhara_walk
path_look = final_arhara_look
meet = meet
combat_ignore_cond = {=fighting_dist_ge(10)}
on_info = {+arhara_way_teleport} walker1
on_info2 = {+fin_agro_arhara_neud_start} kamp

[walker1]
path_walk = final_arhara1_walk
path_look = final_arhara1_look
meet = no_meet
combat_ignore_cond = {=fighting_dist_ge(10)}
on_signal = endpoint | nil %=arhara_dialog.arh_finish_sms1%

[kamp]
center_point  = final_gruppa_camp_center
path_walk = final_gruppa_camp_center_task
radius = 0.2
meet = no_meet
combat_ignore_cond = {=fighting_dist_ge(10)}

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

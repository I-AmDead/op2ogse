; Архара на Агропроме

[logic]
active = {+dan_grab_start} walker, kamp@system_ecolog
combat_ignore = combat_ignore

[kamp@system_ecolog]
center_point  = agro_chsovoy_trezv_camp_center
path_walk = agro_chsovoy_trezv_camp_center_task
on_info = {+dan_grab_start} walker
combat_ignore_cond = {=fighting_dist_ge(15)}

[walker]
path_walk = agra_arhara_walk
path_look = agra_arhara_look
def_state_standing = ward
on_info = {+dan_grab_begin} walker1
combat_ignore_cond = {=fighting_dist_ge(15)}

[walker1]
path_walk = agra1_arhara1_walk
path_look = agra1_arhara1_look
on_info = {+dan_grab_have} walker2
on_signal = endpoint | walker2

[walker2]
path_walk = agra2_arhara2_walk
path_look = agra2_arhara2_look
combat_ignore_cond = {+dan_grab_have =fighting_dist_ge(15)}
on_timer = 150000 | kamp

[kamp]
center_point  = tunnel_arhara_camp_center
path_walk = tunnel_arhara_camp_center_task
combat_ignore_cond = {=fighting_dist_ge(15)}

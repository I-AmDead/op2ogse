[logic]
active = remark
on_death = death
combat_ignore = combat_ignore

[death]
on_info = %+aes_commander_out_sound%

[walker1]
path_walk = aes_soldier_commander_walk1
path_look = aes_soldier_commander_look1
on_info = remark

[camper1]
path_walk = aes_soldier_commander_walk1
path_look = aes_soldier_commander_look1
on_info = remark

[remark]
anim = wounded_heavy
combat_ignore_cond = always
on_info = {+sahar_sumka_have} remark@wait2
meet = meet
snd = help_heavy

[remark@wait2]
anim = wounded_heavy
combat_ignore_cond = always
on_actor_dist_ge_nvis = 25| %=dsh.release_alive_npc%

;
; переговорщик от свободовцев

[logic]
active = walker
combat_ignore = combat_ignore
no_loot = true

[walker]
path_walk = gen_svoboda_parlamenter_walk
path_look = gen_svoboda_parlamenter_look
def_state_standing = ward
on_info = {+nota_bene} remark
combat_ignore_cond = {=fighting_dist_ge(10)}
meet = no_meet

[remark]
anim = wait
target = actor
on_info = {+rashod_strelki} walker1
meet = no_meet
combat_ignore_cond = {=fighting_dist_ge(10)}

[walker1]
path_walk = gen_svoboda2_parlamenter2_walk
path_look = gen_svoboda2_parlamenter2_look
meet = no_meet
combat_ignore_cond = {=fighting_dist_ge(10)}
on_signal = endpoint | nil %=dsh.release_alive_npc%

[logic]
active = walker

[walker]
path_walk = kolmogor_walk
path_look = kolmogor_look
on_info = {+kolmogor_say_start} walker1

[walker1]
path_walk = kolmogor1_walk
path_look = kolmogor1_look
danger = danger_condition

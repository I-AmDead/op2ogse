; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Сталкеры в Баре, у костров и один патрульный
[dsh.gulag.override.bar_visitors]
dsh_walking = true


; Смарт для Кости на Баре. Должен закрыться после его ухода.
[dsh.gulag.override.bar_lager]
cond = {+kostya_svalka_taynik_start -kostya_as_kamp}


; Костер с Иванцовым и к
[dsh.xr_kamp.bar_ivanbarprapor_zenter_dolg_camp_center]
allow_sector = 100, 280


; кострер в первом ангаре (от бара)
[dsh.xr_kamp.bar_visitors_kamp_1]
allow_sector = 10, 190


; кострер во втором ангаре (у северного поста)
[dsh.xr_kamp.bar_visitors_kamp_2]
preferred_seats = 31112, 31110, 31379, 31516


; Кот в Баре
[dsh.gulag.override.bar_kot]
cond = {-info_del_lim_teleport}
on_cleanup = braad_test.del_bkot
smart_terrain_task = bar_lager_esc_kostya_kamp2

[dsh.xr_kamp.bar_kot_kamp]
center_point = bar_lager_esc_kostya_kamp2


; Долговцы на южном посту, где Киценко
[dsh.gulag.override.bar_zastava]
dsh_walking = true
dsh_walking_keep_min = 3


; долговцы на северном посту, который ближе к ДТ
[dsh.gulag.override.bar_zastava_2]
dsh_walking = true
dsh_walking_keep_min = 2

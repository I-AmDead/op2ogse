dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = def
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.yan_st_stalker2.def]:dsh.gulag.override.yan_st_stalker2

[dsh.xr_kamp.yan_st_stalker2_kamp_1]

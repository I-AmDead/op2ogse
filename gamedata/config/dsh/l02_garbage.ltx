; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Переопределить некоторые параметры гулагов.
[dsh.gulag.override.gar_smart_bandit3]
; Сталкеры на Свалке, на остановке у ангара
communities = stalker, green, freedom, nebo
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = def
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.gar_smart_bandit3.def]:dsh.gulag.override.gar_smart_bandit3


; сталкеры за стоянкой техники
[dsh.gulag.override.gar_smart_stalkers_1]
communities  = stalker, freedom, green, nebo
switch_0     = ;{=gulag_empty(gar_smart_bandit_large_lager)}
switch_1     = ;{=gulag_population_comed_ge(gar_smart_stalkers_1:3) !gulag_empty(gar_smart_bandit_large_lager) =dsh_gulag_distance_to_actor_lt(gar_smart_bandit_large_lager:50)}
dsh_change_profile_on_empty = true
dsh_profiles = good,30,bad,30,bad2,20,bad3,20
dsh_walking  = true
dsh_population_locked = true

[dsh.gulag.override.gar_smart_stalkers_1.good]:dsh.gulag.override.gar_smart_stalkers_1

[dsh.gulag.override.gar_smart_stalkers_1.bad]:dsh.gulag.override.gar_smart_stalkers_1
communities = bandit

[dsh.gulag.override.gar_smart_stalkers_1.bad2]:dsh.gulag.override.gar_smart_stalkers_1
communities = killer

[dsh.gulag.override.gar_smart_stalkers_1.bad3]:dsh.gulag.override.gar_smart_stalkers_1
communities = sniper


[dsh.gulag.override.gar_dram]
; бандиты и Юрик на Свалке
cond = {-gar_dm_novice_change_st} ;{-gar_hellcar_dialog_end -gar_hellcar_death}


[dsh.gulag.override.gar_smart_boars]
; кабаны и плоти недалеко от поста Долга
cond = {+gar_free_pass},{+gar_kill_boars_done}
switch_0 =
switch_1 =


; смарт с раненым бандитом, у которого нужно забрать ПДА для поиска
; пропавшей экспедиции
[dsh.gulag.override.gar_psevdowounded]
cond = {-bandranen_pda_est} ;{-agroprom_military_case_done}


; Смарт для Кости на Свалке. Должен закрыться после его ухода.
[dsh.gulag.override.svalka_lager]
cond = {+kostya_taynik -kostya_svalka_taynik_start}


; Сталкеры в Ангаре
[dsh.gulag.override.gar_smart_garage]
capacity    = 4 ;6
communities = stalker, green, freedom, nebo
dsh_walking = true

[dsh.gulag.override.amk_mini_bar]
capacity    = 2 ;8
dsh_walking = true


; Костер в Ангаре
[dsh.gulag.override.gar_angar]
dsh_change_profile_on_empty = true
dsh_profiles = general_lager

[dsh.gulag.override.gar_angar.general_lager]
type           = general_lager
communities    = stalker, green, freedom, nebo
respawn        =
cond           = never ;{+bar_darklab_document_done}
dsh_paths.kamp = gar_seryi_kamp
dsh_walking    = true


; пост Долга
[dsh.gulag.override.gar_dolg_blokpost]
capacity = 8 ;12
dsh_walking = true
dsh_walking_keep_min = 7 ;из 8

; костер на посту Долга
;[dsh.xr_kamp.gar_dolg_blokpost_kamp_point]
;allow_sector = 30, 270


; Бандиты у перехода на Агропром
[dsh.gulag.override.gar_smart_bandit_large_lager]
dsh_walking = true


; костер для Кулинара и Ворона
[dsh.xr_kamp.amk_mini_bar_kulinar_kamp]
center_point = gar_smart_garage_kamp_1


; странный лагерь бандитов под разрушенным зданием
[dsh.gulag.override.gar_smart_bandit_2]
cond = never ;{+agroprom_military_case_done -bar_darklab_document_done}

; -*- mode: conf-windows; coding: windows-1251-dos -*-

; военные под мостом и на насыпи должны идти в опустевший смарт немедленно
[dsh.gulag.idle.amk_embankment]:dsh.gulag.idle
stalker = 0

[dsh.gulag.idle.esc_bridge]:dsh.gulag.idle
stalker = 0


; Сталкеры под дорогой, на Кордоне
[dsh.gulag.override.esc2_most]
communities = stalker, green, freedom, nebo
capacity    = 5 ;3
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = def
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc2_most.def]:dsh.gulag.override.esc2_most


; Деревня новичков
[dsh.gulag.override.esc_lager]
capacity = 14 ;+1 работа для Толика ;13
dsh_walking          = true
dsh_walking_keep_min = 8


; Костер у тепловоза, у насыпи. Активен, пока не активируется esc2_bandit_les,
; где Шустрый с Юриком будут.
[dsh.gulag.override.sak_esc_lager]
cond = {-esc_kill_bandits_quest_kill -esc_kill_bandits_quest_done}
communities = stalker, green, freedom, nebo
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.sak_esc_lager.stalkers]:dsh.gulag.override.sak_esc_lager


; Сталкеры в домике на Кордоне, где Лис был
[dsh.gulag.override.esc2_st_fox_place]
communities = stalker, green, freedom, nebo
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc2_st_fox_place.stalkers]:dsh.gulag.override.esc2_st_fox_place


; Сталкеры на ферме, за мостом
[dsh.gulag.override.esc_farm_lager]
communities = stalker, green, freedom, nebo
dsh_after_delay = 72, 168 ;от трех суток до недели

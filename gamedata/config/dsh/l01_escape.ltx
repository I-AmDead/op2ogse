; Сталкеры на Кордоне, у перехода на Свалку
[dsh.gulag.override.esc2_smart_stalker_exit]
communities = stalker, green, freedom, nebo
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers,60,bandits,20,bandits2,10,bandits3,10
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc2_smart_stalker_exit.stalkers]:dsh.gulag.override.esc2_smart_stalker_exit

[dsh.gulag.override.esc2_smart_stalker_exit.bandits]:dsh.gulag.override.esc2_smart_stalker_exit
communities = bandit

[dsh.gulag.override.esc2_smart_stalker_exit.bandits2]:dsh.gulag.override.esc2_smart_stalker_exit
communities = killer

[dsh.gulag.override.esc2_smart_stalker_exit.bandits3]:dsh.gulag.override.esc2_smart_stalker_exit
communities = sniper


; костёр на Кордоне, где Шустрый с Юриком сидят, недалеко от насыпи.
[dsh.gulag.override.esc2_bandit_les]
communities     = stalker, green, freedom, nebo
capacity        = 4 ;3
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = {+gar_dram_novice_mp5_m1_done +gar_dram_novice_burer_hand_done}
dsh_profiles    = stalkers
dsh_walking     = {+gar_dram_novice_mp5_m1_done +gar_dram_novice_burer_hand_done}
dsh_population_locked = {+gar_dram_novice_mp5_m1_done +gar_dram_novice_burer_hand_done}

[dsh.gulag.override.esc2_bandit_les.stalkers]:dsh.gulag.override.esc2_bandit_les


[dsh.gulag.override.esc_assault]
; три сталкера на холме, которые идут на АТП и там мрут у костра. Но в самом
; начале - это группа Петрухи, которая атакует АТП. Вот после освобождения
; Шустрого мы этот смарт и выключим. Таким же образом в all.spawn выключается
; смарт с первоначальными бандитами на АТП.

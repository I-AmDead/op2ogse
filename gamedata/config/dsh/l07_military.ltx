; -*- mode: conf-windows; coding: windows-1251-dos -*-

; свободовцы у Барьера должны идти в опустевший смарт немедленно
[dsh.gulag.idle.mil_fblockpost]:dsh.gulag.idle
stalker = 0


[dsh.gulag.idle.mil_monster]:dsh.gulag.idle
; новые мутанты на Барьере появятся через промежуток времени от 3-х дней и
; до недели
monster = 72, 168


; Наемники на АС, на хуторе около деревни кровососов. На них дает задание
; Лукаш.
[dsh.gulag.override.mil_bandit]
dsh_after_delay = 168, 720 ;от недели до месяца
dsh_change_profile_on_empty = true
dsh_profiles = def
dsh_population_locked = true

[dsh.gulag.override.mil_bandit.def]:dsh.gulag.override.mil_bandit


[dsh.gulag.override.mil_mercs]
; Наемники на АС, у перехода на ДТ
dsh_walking = true


[dsh.gulag.override.military_neytral]
; Сталкеры на АС, на хуторе у перехода в Бар
communities = stalker, green
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = def
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.military_neytral.def]:dsh.gulag.override.military_neytral


[dsh.gulag.override.mil_lair2]
; собаки за хутором с наемниками
dsh_walking = true


[dsh.gulag.override.mil_lair3]
; кабаны и плоти у минного поля
dsh_walking = true


; кровосос, на которого дает задание охотник в Баре
[dsh.gulag.override.mil_hunters_bloodsucker]
cond = {-mil_leader_quest2_complete}


; Лагерь свободовцев к Деревне Кровососов
[dsh.gulag.override.mil_village]
dsh_population_locked = true


; Смарт для Кости на АС. Должен закрыться после выполнения всех заданий
; Кости. См. dsh.se_stalker.esc_kostya.smart_terrains
[dsh.gulag.override.as_lager]
; cond = {+kostya_as_kamp}
cond = { +kostya_as_kamp -kostya_pripyat_taynik_done }, { +kostya_as_kamp +akim_journal_start -kostya_journal_done }, { +kostya_as_kamp -voron_kostya_done }, { +kostya_as_kamp -kostya_biznes1_done }


; Сталкеры на АС, под холмом, где Волк стоит.
[dsh.gulag.override.mil_lager]
communities = stalker, green
dsh_walking = true
dsh_walking_keep_min = 3


; Респаунер контроллеров на АС
[dsh.se_respawn.mil_controler_respawn_1]
respawn_section = m_controller_normal,49,m_controller_normal_fat,49,m_controller_old,1,m_controller_old_fat,1


; Лампадка для Повара
[dsh.xr_kamp.mil_freedom_cook_kamp]
level_vertex_id = 236284
preferred_seats = 236286

; Бандиты в Забытом хуторе
[dsh.gulag.override.lost_village_bandit]
communities = bandit
cond = {+derevny_zashita_done}
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = bandits,40,bandits2,30,bandits3,30
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.lost_village_bandit.bandits]:dsh.gulag.override.lost_village_bandit

[dsh.gulag.override.lost_village_bandit.bandits2]:dsh.gulag.override.lost_village_bandit
communities = killer

[dsh.gulag.override.lost_village_bandit.bandits3]:dsh.gulag.override.lost_village_bandit
communities = sniper


; Сталкеры в Забытом хуторе
[dsh.gulag.override.village_gulag_small]
communities = stalker, green, freedom, nebo
cond = {+derevny_zashita_done}
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = def
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.village_gulag_small.def]:dsh.gulag.override.village_gulag_small


[dsh.gulag.override.village_gulag_big]
communities = stalker, green, freedom, nebo
dsh_walking = {+derevny_zashita_done}

; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Охотники, которым нужен рюкзак Митяя
[dsh.gulag.override.green_forest]
cond = {-klyak_forest_doc_done}


; сталкеры у башни
[dsh.gulag.override.stalker_forest_bashya]
communities = stalker, green, freedom, nebo
dsh_walking = true


[dsh.gulag.override.bunker_forest]
; наемники у моста
communities     = killer
dsh_after_delay = 168, 720 ;от недели до месяца
dsh_change_profile_on_empty = true
dsh_population_locked = true
dsh_profiles    = killer, monolith
dsh_walking     = true

[dsh.gulag.override.bunker_forest.killer]:dsh.gulag.override.bunker_forest
[dsh.gulag.override.bunker_forest.monolith]:dsh.gulag.override.bunker_forest
communities     = monolith


; Псевдособаки у перехода с АС
[dsh.gulag.override.pseudodog_forest]
; Что бы не кучковались около перехода, будем их телепортировать на место
; работы, как только они дойдут до своего game_vertex-а.
teleport_to_job = true


[dsh.se_respawn.bloodsucker_forest_respawn]
respawn_section = bloodsucker_strong, bloodsucker_normal, bloodsucker_weak


; сталкеры у моста
[dsh.gulag.override.freed_nebo]
dsh_after_delay = 168, 720 ;от недели до месяца
dsh_change_profile_on_empty = true
dsh_population_locked = true
dsh_profiles    = def
dsh_walking     = true

[dsh.gulag.override.freed_nebo.def]:dsh.gulag.override.freed_nebo


; Гулаг для Шедоумена закрывается после завершения задания про Дениса.
; Шедоумен к этому моменту будет уже удален и гулаг не нужен.
[dsh.gulag.override.shadowman_forest_bashya]
cond = {+shadowman_forest_have -denis_wound_done}

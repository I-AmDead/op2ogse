[smart_terrains]
none = true

[logic]
active = walker
combat_ignore = combat_ignore

[walker]
path_walk = prigorshnya_walk
path_look = prigorshnya_look
;danger = danger_ignore
;meet = meet
on_info = {+prigorshnya_stop} kamp
combat_ignore_cond = {=fighting_dist_ge(15)} always

[kamp]
center_point  = prigorshnya_camp_center
path_walk     = prigorshnya_camp_center_task
;meet = meet
radius = 2.2
;danger = danger_ignore
combat_ignore_cond = {=fighting_dist_ge(15)} always

[danger_ignore]
ignore_distance = 0

[meet]
use = true
use_wpn = true
meet_talk_enabled = true

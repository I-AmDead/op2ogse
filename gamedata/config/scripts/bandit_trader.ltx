; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = walker
combat_ignore = combat_ignore
on_hit = hit
on_death = death

[walker]
path_walk = mongol_walk_way
path_look = mongol_way_look
meet = meet
combat_ignore_cond = {+val_bandit_talk -val_borov_enemy -val_borov_dead =fighting_actor}, {=dist_to_enemy_ge(10) =dont_fighting_actor}
def_state_standing = sit

[meet]
meet_state = 5| {+npc_greet} wait_trade, wait_trade@ {+npc_greet} talk_bye %-npc_greet% |4| {-npc_greet} wait_trade, wait_trade@ {-npc_greet} talk_hello %+npc_greet%
meet_state_wpn = 5| {+npc_greet} wait_trade, wait_trade@ {+npc_greet} talk_bye %-npc_greet% |4| {-npc_greet} wait_trade, wait_trade@ {-npc_greet} talk_hello %+npc_greet%
use = true
use_wpn = false
meet_talk_enabled = true
precond = visibility

[hit]
on_info = {+val_bandit_talk =hit_by_actor} %+val_borov_enemy%

[death]
on_info = {+val_bandit_talk =killed_by_actor} %+val_borov_enemy%

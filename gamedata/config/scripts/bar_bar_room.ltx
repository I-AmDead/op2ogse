[logic]
active = sr_idle@work

[sr_idle@work]
on_actor_inside = sr_idle@work2

[sr_idle@work2]
on_actor_outside = sr_idle@work
on_info = {+bar_barman_need_room =dsh.npc_inside_zone} sr_idle@wait, {-bar_barman_need_room =dsh.npc_inside_zone} nil %+bar_bar_guard_enemy%

[sr_idle@wait]
on_actor_outside = sr_idle@wait2

[sr_idle@wait2]
on_actor_inside = sr_idle@wait
on_timer = 30000 | sr_idle@work %-bar_barman_need_room%

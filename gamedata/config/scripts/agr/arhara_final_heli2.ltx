combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 65
velocity = 0
invulnerable = true
on_info = {+final_muzon} heli_move@fly3

[heli_move@fly3]
path_move = agro_final_heli2_otlet_move
engine_sound = true
default_velocity = 15
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 120
invulnerable = true

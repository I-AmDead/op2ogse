; на дороге
[logic]
active = heli_move@idle

[heli_move@idle]
path_move = agro_final_heli2_idle_move
engine_sound = false
combat_safe_altitude = 85
invulnerable = true
mute = true
on_info = {+final_agro_say_ok_start} heli_move@fly1

[heli_move@fly1]
path_move = agro_final_heli2_predesant_move
engine_sound = true
default_velocity = 10
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
invulnerable = true
mute = true
combat_safe_altitude = 80
;on_timer = 42000 | heli_move@fly2
on_signal = endpoint | heli_move@fly2

[heli_move@fly2]
path_move = agro_final_heli2_desant_move
engine_sound = true
default_velocity = 4
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 65
velocity = 0
invulnerable = true
on_signal = endpoint | heli_move@fly2_1 %+spawn_vtoray_vertuha%

[heli_move@fly2_1]
path_move = agro_final_heli2_desant_move
engine_sound = false
default_velocity = 4
combat_enemy = nil
